
@{
    ViewBag.Title = "UserManagement";
}
<div class="row">
    <div class="col-lg-12">
        <h2>Gestion des utilisateurs</h2>
        <div class="col-lg-5">
            

            <h3>Importer des étudiants depuis un fichier CSV</h3>
            @using (Html.BeginForm("AddUserFromCSV", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <label for="csv">Fichier CSV: </label>
                    <input type="file" accept=".csv" name="csv" />
                </div>
                <div style="width:100%;margin-top:5px;">
                    <button type="submit" class="btn btn-success">Valider</button>
                </div>
            }
        </div>
        <div class="col-lg-2"></div>
        <div class="col-lg-5">
            <h3>Ajouter un utilisateur</h3>
            @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="type">Type d'utilisateur</label><br />
                    <select id="typeOfUser" class="form-control" name="type">
                        <option>Invité</option>
                        <option>Admin</option>
                        <option>Prof</option>
                        <option>Etudiant</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="lastName">Nom</label><br/>
                    <input type="text" name="lastName" id="lastName" />
                </div>
                <div class="form-group">
                    <label for="firstName">Préom</label><br />
                    <input type="text" name="firstName" id="firstName" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label><br />
                    <input type="email" name="email" id="email" />
                </div>
                <div class="form-group">
                    <label for="login">Login</label><br />
                    <input type="text" name="login" id="login" />
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label><br />
                    <input type="text" name="password" id="password" />
                </div>
                <div class="form-group">
                    <label for="regNumber">Matricule</label><br />
                    <input type="text" name="regNumber" id="regNumber" />
                </div>
                <div class="form-group">
                    <label for="regNumber">Matricule</label><br />
                    <input type="text" name="regNumber" id="regNumber" />
                </div>
                <div class="form-group">
                    <label for="year">Année</label><br />
                    <input type="number" name="year" id="year" min="1" max="3" />
                </div>
                <div class="form-group">
                    <label for="type">Section</label><br />
                    <select id="section" class="form-control" name="section">
                    </select>
                </div>
                <div class="form-group">
                    <label for="profile">Profil</label><br />
                    <select id="profile" class="form-control" name="profile"></select>
                </div>



            }

        </div>
    </div>
</div>


